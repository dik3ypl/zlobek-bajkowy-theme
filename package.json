{
  "name": "projekt",
  "version": "1.0.0",
  "scripts": {
    "build-sass": "sass src/index.scss dist/style.css",
    "watch-sass": "sass --watch src/index.scss:dist/style.css",
    "build-js": "webpack",
    "watch-js": "webpack --watch",
    "watch": "concurrently \"npm run watch-sass\" \"npm run watch-js\""
  },
  "devDependencies": {
    "sass": "^1.32.0",
    "concurrently": "^7.0.0",
    "webpack": "^5.0.0",
    "webpack-cli": "^4.0.0"
  }
}
